%ul#last_images
  - @images.each do |image|
    - active = image.shown_date == @primary_image.shown_date
    %li{:class => active ? 'active' : ''}
      .image-container
        - if active
          = image_tag image.image.thumb.url
        - elsif defined? @user
          %a{:href => "/#{@user.nick}/#{image.shown_date.to_string_date}"}
            = image_tag image.image.thumb.url
        - else
          %a{:href => "/#{image.shown_date.to_string_date}"}
            = image_tag image.image.thumb.url
      %center
        .date
          = l image.shown_date.to_date, :format => :date_month
.content
  = render 'shared/main_image_and_comments'