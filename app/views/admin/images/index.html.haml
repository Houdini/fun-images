%h1
  Listing images

= link_to 'New image', new_admin_image_path

.images
- @images.each do |image|
  .image
    %h2
      = image.title
    %p
      = image.description
    = image_tag image.image.thumb.url
    .menu
      = link_to 'Show', admin_image_path(image)
      = link_to 'Edit', edit_admin_image_path(image)
      = link_to 'Destroy', [:admin, image], :confirm => 'Are u sure?', :method => :delete
