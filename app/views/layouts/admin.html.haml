!!!Strict
%html
  %head
    = stylesheet_link_tag 'admin.css', :media => 'screen, projection'
    = javascript_include_tag 'application'
    = csrf_meta_tag
  %body
    #header
      .menu
        = link_to t(:images), admin_images_path
      = current_user.email
    
    = yield
  - if Rails.env == :production
    = javascript_include_tag 'jquery.min'
    = javascript_include_tag 'admin.min'
  - else
    = javascript_include_tag 'jquery', 'rails', 'admin'
